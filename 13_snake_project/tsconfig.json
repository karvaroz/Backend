{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2020",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"removeComments": true,
		"incremental": true,
		"noImplicitAny": true,
		"types": ["reflect-metadata", "jest", "@types/jest", "ts-jest", "node"],
		"lib": ["es2020", "DOM"],
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "tests"],
	"exclude": ["node_modules", "dist"]
}
